<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane stylesheets="@styles.css" prefHeight="345.0" prefWidth="561.0" styleClass="home" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.braintease_final.Results">
    <VBox alignment="CENTER" spacing="20">
        <Label text="Quiz Results" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 2, 2, 0, 0);" />
        <Label fx:id="remark" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 2, 2, 0, 0);" />
        <HBox alignment="CENTER" spacing="20">
            <VBox>
                <Label fx:id="correcttext" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 2, 2, 0, 0);" />
                <ProgressIndicator fx:id="correct_progress" progress="0" prefWidth="100" prefHeight="100" />
            </VBox>
            <VBox>
                <Label fx:id="wrongtext" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 2, 2, 0, 0);" />
                <ProgressIndicator fx:id="wrong_progress" progress="0" prefWidth="100" prefHeight="100" />
            </VBox>
        </HBox>
        <Label fx:id="markstext" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 2, 2, 0, 0);" />
        <Label fx:id="marks" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: teal; -fx-effect: dropshadow(gaussian, black, 2, 2, 0, 0);" />
    </VBox>
</AnchorPane>
